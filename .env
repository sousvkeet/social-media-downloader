# Server Configuration
PORT=8000
HOST=0.0.0.0
NODE_ENV=development
SERVER_URL=http://localhost:8000  # Public URL for download links (change to your domain)

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# yt-dlp Configuration
YTDLP_COOKIES_FROM_BROWSER=brave
YTDLP_OUTPUT_PATH=./downloads
YTDLP_MAX_FILE_SIZE=500M
YTDLP_RATE_LIMIT=500M

# Download Configuration
MAX_CONCURRENT_DOWNLOADS=3
DOWNLOAD_TIMEOUT=300000
FILE_CLEANUP_INTERVAL=30  # Auto cleanup interval in minutes (0 to disable)

# Optional: Proxy Configuration
# HTTP_PROXY=
# HTTPS_PROXY=

# Optional: Authentication
# API_KEY=your_api_key_here

# Frontend Environment Variables (for reference)
# VITE_API_BASE_URL=http://localhost:3000
# VITE_MP3_API_URL=
# VITE_API_KEY=
# VITE_GOOGLE_SHEET_URL=
